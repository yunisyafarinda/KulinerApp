<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_kuliner"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        tools:src="@drawable/bakso"
        />

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_kuliner"
        android:layout_toEndOf="@id/img_kuliner"
        android:layout_marginLeft="25dp"
        tools:text="Nama Kuliner"
        android:textStyle="bold"
        />
    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_below="@id/txt_nama"
        android:layout_toRightOf="@id/img_kuliner"
        android:layout_toEndOf="@id/img_kuliner"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/txt_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating"
        android:layout_toRightOf="@id/img_kuliner"
        android:layout_toEndOf="@id/img_kuliner"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        tools:text="Deskripsi Kuliner"
        />

</RelativeLayout>